<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtIdDespesa"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="ID"
        android:importantForAutofill="no"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtDescricaoDespesa"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Descrição"
        android:importantForAutofill="no"
        android:textColorHint="@color/black"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edtIdDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtValorDespesa"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Valor"
        android:importantForAutofill="no"
        android:textColorHint="@color/black"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtDescricaoDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtCategoriaDespesa"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Categoria"
        android:importantForAutofill="no"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtValorDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCadastrarDespesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edtCategoriaDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnAtualizarDespesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Atualizar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnCadastrarDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDeletarDespesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deletar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnAtualizarDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnProcurarDespesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Procurar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeletarDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnListarDespesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnProcurarDespesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnListarDespesa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/txtResultadosDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:scrollbars="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


